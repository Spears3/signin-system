extends layout

block script
  script(type="text/javascript", src="/javascripts/signin.js")

block content
  div.MainArea
    h1 用户登录
    form(method="post")
      div
        span 用户名
        input#username(type="text", name="username", value="#{username}")
      div
        span 密码
        input#password(type="password", name="password", value="#{password}")
      input#signin(type="submit", value="登录")
    p#tip #{reason}
