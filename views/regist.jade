extends layout

block script
  script(type="text/javascript", src="/javascripts/regist.js")

block content
  body
    .MainArea
      h1 用户注册
      form(method="post")
        div
          span 用户名
          input#username(type="text", name="username", value="#{username}")
        div
          span 学号
          input#sid(type="text", name="sid", value="#{sid}")
        div
          span 电话
          input#phone(type="text", name="phone", value="#{phone}")
        div
          span 邮箱
          input#email(type="text", name="email", value="#{email}")
        div
          span 密码
          input#password(type="text", name="password", value="#{password}")
        div
          span 确认密码
          input#passwordAgain(type="text", name="passwordAgain", value="#{passwordAgain}")
        input(type="reset", name="重置")
        input#submit(type="submit", value="提交")
      p#tip #{reason}